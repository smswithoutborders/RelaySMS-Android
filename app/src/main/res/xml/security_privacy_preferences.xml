<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="lock_screen"
        app:title="@string/settings_lock_screen_preference_category">
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="lock_screen_always_on"
            app:summary="@string/settings_security_and_privacy_enable_lockscreen_open_summary"
            app:title="@string/settings_security_and_privacy_enable_lockscreen_open" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_privacy_vault_preference">
        <Preference
            app:iconSpaceReserved="false"
            app:key="revoke"
            app:summary="@string/settings_privacy_preferences_choose_which_platforms_you_want_to_remove_from_the_vault"
            app:title="@string/revoke_platforms" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/settings_security_and_privacy_account">
        <Preference
            app:iconSpaceReserved="false"
            app:key="clear_bridges"
            app:summary="This would delete your Auth codes stored for Aliasing. You can request for another code at anytime."
            app:title="Clear aliasing" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="logout"
            app:summary="@string/settings_security_and_privacy_account_logout_summary"
            app:title="@string/settings_security_and_privacy_account_logout" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="delete"
            app:summary="@string/settings_security_and_privacy_account_delete_summary"
            app:title="@string/settings_security_and_privacy_account_delete" />
    </PreferenceCategory>
</PreferenceScreen>